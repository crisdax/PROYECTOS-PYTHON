def Filtrar_Contenido(Doc):

    CB = (s.Nombres for s in Doc)
    CD = {Counter:CB}
    return list(CD)




def Filtrar_Contenido(Doc):
    CD = {}
    CB =[s.Nombres for s in Doc]
    CD = Counter[str(CB)]
    return CD



