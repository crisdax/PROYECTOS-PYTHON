    4) def Iniciales (Doc):
    Datos =[s.Nombres for s in Doc]
    Diccionario= {Ca: Datos.count(Ca) for Ca in Datos }
    Contador = Counter(Diccionario)
    Items = Contador.items()
    Iniciales=(dict(Items))
    Resultado = ("Total de personas con la inicial :  {}".format(Iniciales))
    return Resultado